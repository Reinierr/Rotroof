<Window x:Class="RotRoof.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RotRoof"
        mc:Ignorable="d"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        Title="RotRoof" Height="720" Width="1000">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:MapViewModel}">
            <local:MapView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ChartViewModel}">
            <local:ChartView/>
        </DataTemplate>
    </Window.Resources>
    <Border Background="White" BorderBrush="#008651" BorderThickness="6">

        <DockPanel LastChildFill="True">

            <Border Background="White" BorderBrush="#008651" BorderThickness="0,0,6,0"  >
            <StackPanel DockPanel.Dock="Left" Background="White" MinWidth="250">
           
                <StackPanel Orientation="Horizontal" x:Name="navigation">
                        <Button Margin="5" Padding="30" MinWidth="130" Background="#008651" Foreground="White" Content="Map" Command="{Binding MapCommand}"></Button>
                        <Button Margin="5" Padding="30" MinWidth="130" Background="#008651" Foreground="White" Content="Chart" Command="{Binding ChartCommand}"></Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" MinHeight="10" >
                        <Button Margin="5"  MinHeight="10" MinWidth="130" Background="White" Foreground="#008651" BorderBrush="#008651" BorderThickness="3">CHART 1</Button>
                        <Button Margin="5" Padding="30" MinWidth="130" Background="White" Foreground="#008651" BorderBrush="#008651" BorderThickness="3">CHART 2</Button>
                </StackPanel>

 
            </StackPanel>
            </Border>
            <ContentControl x:Name="Pages" Content="{Binding SelectedViewModel}"/>
            



        </DockPanel>
    </Border>



</Window>
